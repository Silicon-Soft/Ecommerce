@model Ecommerce.ViewModel.EditProductVM
<div >
    <form method="post" class="d-flex" enctype="multipart/form-data">
        <input asp-for="ProductID" hidden />
        <div class="border p-3 mt-4 w-50">
            <div class="mb-3 row">
                <label asp-for="ProductName"></label>
                <input asp-for="ProductName" class="form-control" type="text" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="mb-3 row">
                <label asp-for="ProductDescription"></label>
                <textarea asp-for="ProductDescription" class="form-control" ></textarea>
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>
            <div class="mb-3 row">
                <label asp-for="SellPrice"></label>
                <input asp-for="SellPrice" class="form-control" type="text" />
                <span asp-validation-for="SellPrice" class="text-danger"></span>
            </div>
            <div class="d-flex">
            <div class="col-6">
                <button class="btn btn-primary col-6" type="submit" style="width:150px">
                    Update
                </button>
            </div>

            <div class="col-6">
                <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">
                    GO-BACK
                </a>
            </div>
        </div>
        </div>
        <div class="w-50 border p-3 mt-4">
            <img src="@Url.Content($"~/Product/{Model.oldimageLink}")" alt="ProductName" class="img-fluid" style="max-height:50vh"  />
            <input asp-for="oldimageLink" type="hidden" />
            <input asp-for="imagefile" type="file" class="form-control" />
            <span asp-validation-for="imagefile" class="text-danger"></span>
            

        </div>
        
    </form>
</div>
