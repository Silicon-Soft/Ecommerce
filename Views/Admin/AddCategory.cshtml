@model Ecommerce.ViewModel.CategoryVM
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Create Category</h2>
            <hr />
            <div class="mb-3 row" >
                <label asp-for="CategoryName">Category Name:</label>
                <input asp-for="CategoryName" class="form-control" type="text" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>

            </div>
            <div class="row">
                <div class="col-6">
                <button class="btn btn-primary col-6" type="submit" style="width:150px">
                Create
            </button>
            </div>
      
        <div class="col-6">
        <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">
            GO-BACK
        </a>
                </div>
        </div>
        </div>
    </div>
</form>