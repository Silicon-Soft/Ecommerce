
@{
    ViewData["Title"] = "ViewProduct";
}
@model List<ViewProductVM>

<h1>ViewProduct</h1>
<div class="col-7 p-3">
    <a asp-controller="Product" asp-action="AddProduct" class="btn btn-primary">
        Create New Products
    </a>

</div>
<table class="table table-bordered table-striped ">
    <thead class="text-bg-dark">
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Product Category
            </th>
            <th>
                Sell Price
            </th>
            <th>
                Photo:
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody class="bg-white">
        @foreach (var viewProductVM in Model.OrderBy(u => u.ProductID))
        {
        
        <tr>
            <td>
                @viewProductVM.ProductName
            </td>
            <td>
                @viewProductVM.CategoryName
            </td>
            <td>
                @viewProductVM.SellPrice
            </td>
                
            <td>
                    <img src="@Url.Content($"~/Product/{viewProductVM.imageLink}")" alt="@viewProductVM.ProductName" class="img-fluid" style="height:100px; "/>
            </td>
            <td>
                    <div class="p-1 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="" class="btn btn-edit bg-white mx-2">
                            Edit
                        </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="" class="btn btn-danger mx-2">
                            Delete
                        </a>
                        <a
                         asp-controller="Category" asp-action="Delete" asp-route-id="" class="btn btn-secondary mx-2">
                        Read
                        </a>
                    </div>
            </td>
        </tr>
        }
    </tbody>
</table>

