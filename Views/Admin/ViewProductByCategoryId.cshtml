@model List<ViewProductVM>
<div class="d-flex">
    <div class="mt-4"> @Html.Partial("_MenuPartial")</div>
<div class="container mb-lg-5 mt-2">
     @if (Model.Count()!=0)
    {
        <table class="table table-bordered table-striped ">
            <thead class="text-bg-dark">
                <tr>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Price
                    </th>
                </tr>
            </thead>

            <tbody class="bg-white">
                @foreach (var view in Model)
                {

                    <tr>
                        <td>
                            @view.ProductName
                        </td>
                        <td>
                            @view.SellPrice 
                        </td>


                    </tr>
                }
            </tbody>
        
        </table>
    }
    else
    {
        <p class="mb-lg-5">No records</p>
    }

        

<a asp-controller="Admin" asp-action="ViewCategory" class="btn btn-info mb-lg-5">Back</a>
</div>
</div>