@model IEnumerable<Ecommerce.ViewModel.ViewOrderVM>
<div class="d-flex">
    <div class="mt-4"> @Html.Partial("_MenuPartial")</div>
<div class="container mt-1 justify-content-center">
<h1>View All Orders</h1>
<div class="container">
        <div class="mb-3 w-50 d-flex">
            <input type="text" class="form-control" id="orderIdSearch" placeholder="Serach By OrderNumber">
            <button class="btn btn-primary mx-2" onclick="searchOrders()">Search</button>
        </div>
<table class="table table-bordered table-striped ">
    <thead class="text-bg-dark">
        <tr>
            <th>
                Order Number
            </th>
            <th>
                Customer Name
            </th>
            <th>
                Order Address
            </th>
            <th>
                Customer Contact Number
            </th>
            <th>
                Order Status
            </th>
            <th>Update Status</th>
            <th>Order Placed Date</th>
            <th>
               Actions
            </th>
        </tr>
    </thead>
    <tbody class="bg-white" id="tbody">

        @foreach (var obj in Model.OrderBy(u =>
        {
           if (u.status == "Not Delivered")
                return 1;
            else if (u.status == "pending")
                return 2;
            else
                return 3;

        }))
    {
            <tr id="order_@obj.OrderId">
                <td>
                    @obj.OrderId
                </td>
                <td>
                    @obj.Fullname
                </td>
                <td>
                    @obj.address
                </td>
                <td>
                   @obj.customernumber
                </td>
                <td id="status_@obj.OrderId">
                    @obj.status
                </td>
                <td>
                    @if (obj.status == "Not Delivered" || obj.status=="notDelivered")
                    {
                        <select id="orderStatus_@obj.OrderId" name="orderStatus_@obj.OrderId">
                            <option value="" disabled selected>Select Status</option>
                            <option value="notDelivered">Not Delivered</option>
                            <option value="pending">Pending</option>
                            <option value="delivered">Delivered</option>
                        </select>
                        <a class="btn btn-secondary" onclick="updatestatus(@obj.OrderId)">Update Status</a>
                    }else if(obj.status=="pending")
                    {
                        <select id="orderStatus_@obj.OrderId" name="orderStatus_@obj.OrderId">
                            <option value="" disabled selected>Select Status</option>
                            <option value="pending">Pending</option>
                            <option value="delivered">Delivered</option>
                        </select>
                        <a class="btn btn-primary" onclick="updatestatus(@obj.OrderId)">Update Status</a>
                    }else
                    {
                       <div class="d-flex align-items-center"> 
                        <svg class="mx-2" xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                            <path style="background-color:green" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                        </svg>
                        <h5 class="m-0" style="color:forestgreen"><i>Delivered</i></h5>
                        </div>
                    }
                </td>
                <td>@obj.dateTime</td>
                <td>
                    <a class="btn btn-primary"asp-controller="Admin" asp-action="ViewOrderDetail" asp-route-orderid="@obj.OrderId">View Order Details</a>
                </td>
                
            </tr>
    }  
    </tbody>
</table>
        <div class="btn btn-primary btn-sm" id="goback" style="display:none;" onclick="location.reload();"><div class="d-flex mx-3 mb-2">Go Back</div></div>
</div>
   

</div>
</div>
<div class="toast-container position-fixed top-0 end-0 p-3">
    <div id="liveToast" class="toast bg-success" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <strong class="me-auto">Status Updated</strong>
            <small>Now</small>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
            Sucessfully Updated
        </div>
    </div>
</div>


<script>
    function updatestatus(OrderId)
    {
        var status = $('#orderStatus_' + OrderId).val();
        $.ajax({
            url: "/Order/UpdateStatus",
            data:{
                orderId:OrderId,
                status:status
            },
            success:function(data)
            {
                if (data==null)
                {
                    alert("Select the status:");
                }else
                {
                    $('#status_'+data.orderid).text(data.orderstatus);
                    showToast();
                    if (data.orderstatus == "delivered")
                    {
                        location.reload();
                    }
                }
            },
            error:function(err)
            {
                console.error(err);
            }
        });

    }
    function searchOrders() {
        var orderId = $('#orderIdSearch').val();
        $.ajax({
            url: "/Order/SearchOrders",
            data: { orderId: orderId },
            success: function (data) {
                if (data==0) {
                    $('#tbody').html("<tr><td colspan='8'>No Order Found</td></tr>")
                    $('#goback').show();
                }
                else
                {
                    $('tbody tr').hide();


                    $('#order_' + data).show();
                    $('#goback').show();
                    
                }
            },
            error: function (err) {
                console.error(err);
            }
        });
    }
    function showToast() {
        var toastElement = new bootstrap.Toast(document.getElementById('liveToast'));
        toastElement.show();
    }
</script>
